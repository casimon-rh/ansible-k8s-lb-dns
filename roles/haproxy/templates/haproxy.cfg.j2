## Jinja2 template
#---------------------------------------------------------------------
# Example configuration for a possible web application.  See the
# full configuration options online.
#
#   http://haproxy.1wt.eu/download/1.4/doc/configuration.txt
#
#---------------------------------------------------------------------

#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
  log         127.0.0.1 local2 info
  chroot      /var/lib/haproxy
  pidfile     /var/run/haproxy.pid
  maxconn     4000
  user        haproxy
  group       haproxy
  daemon

#---------------------------------------------------------------------
# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
  mode    http
  timeout connect         5s
  timeout client          30s
  timeout server          30s
  log                     global

# ---------------------------------------------------------------------
# round robin balancing for OCP Kubernetes API Server
# ---------------------------------------------------------------------
frontend api_6443
  bind *:6443
  option tcplog
  mode tcp
  default_backend api_6443

backend api_6443
  balance source
  mode tcp
{% for ctrlplane in groups['ctrlplanes'] | sort %}
  server {{ ctrlplane }} {{ ctrlplane }}.{{ domain }}:6443 check
{% endfor %}


# ---------------------------------------------------------------------
# round robin balancing for OCP Ingress Insecure Port
# ---------------------------------------------------------------------
frontend ingress_http
  bind *:80
  default_backend ingress_http
  mode tcp
  option tcplog

backend ingress_http
  balance roundrobin
  mode tcp
{% for ctrlplane in groups['ctrlplanes'] | sort %}
  # server {{ ctrlplane }} {{ ctrlplane }}.{{ domain }}:80 check
{% endfor %}
{% for worker in groups['workers'] | sort %}
  server {{ worker}} {{ worker }}.{{ domain }}:80 check
{% endfor %}

# ---------------------------------------------------------------------
# round robin balancing for OCP Ingress Secure Port
# ---------------------------------------------------------------------
frontend ingress_https
  bind *:443
  default_backend ingress_https
  mode tcp
  option tcplog

backend ingress_https
  balance roundrobin
  mode tcp
{% for ctrlplane in groups['ctrlplanes'] | sort %}
  # server {{ ctrlplane }} {{ ctrlplane }}.{{ domain }}:443 check
{% endfor %}
{% for worker in groups['workers'] | sort %}
  server {{ worker}} {{ worker }}.{{ domain }}:443 check
{% endfor %}

# ---------------------------------------------------------------------
# Exposing HAProxy Statistic Page
# ---------------------------------------------------------------------
listen stats
  bind :9000
  mode http
  stats enable
  stats hide-version
  stats refresh 5s
  stats show-node
  stats auth admin:password
  stats uri /

